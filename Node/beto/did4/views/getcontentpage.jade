extends layout

mixin item(itemData, size)
  if size == "small"
    +small(itemData)
  else if size == "medium"
    +medium(itemData)
  else
    if itemData.TypeID == 3
      +specialEvent(itemData)
    else
      +large(itemData)

mixin small(itemData)
  .dp_itemImage.dp_itemSmallImage
    a(href="")
      img.FormatImage(src="http://akimages.shoplocal.com/dyn_li/158.0.88.0/#{itemData.Image}")
    .dp_ratingsReviews.excludeFromMobile.FormatRatings
    .clear
  .dp_price.DealDescription.FormatDeal.FormatDealMediumSmall #{itemData.DealDescription}
  .dp_itemInfo
    h3.dp_title
      span.ellipsis_text.Title #{itemData.Title}
    .clear
  .clear

mixin medium(itemData)
  .dp_itemImage.dp_itemMediumImage
    a(href="")
      img.FormatImage(src="http://akimages.shoplocal.com/dyn_li/258.0.88.0/#{itemData.Image}")
    .dp_ratingsReviews.FormatRatings
    .clear
  .dp_price.DealDescription.FormatDeal.FormatDealMediumSmall #{itemData.DealDescription}
  .dp_itemInfo
    .dp_brandname from #{itemData.BrandName}
    h3.dp_title
      span.ellipsis_text.Title #{itemData.Title}
    .clear
  .clear

mixin large(itemData)
  .dp_itemImage.dp_itemLargeImage
    a(href="")
     img.FormatImage(src="http://akimages.shoplocal.com/dyn_li/300.0.88.0/#{itemData.Image}")
    .dp_ratingsReviews.excludeFromMobile.FormatRatings
    .clear
  .dp_itemInfo
    .dp_price.DealDescription.FormatDeal #{itemData.DealDescription}
    h3.dp_title
      span.ellipsis_text.Title #{itemData.Title}
    .dp_description #{itemData.Description}
    .clear
  .clear
  .gradientOverlay

mixin specialEvent(itemData)
  .dp_itemImage
    a(href="")
     img.FormatImage(src="http://akimages.shoplocal.com/dyn_li/921.0.88.0/#{itemData.Image}")
    .clear
  .clear

block content

  if Name == "DID template 1"
    .dynamicPageContainer
      #dynamicPageMaincontent.dynamicPageMaincontent
        .dynamicPageItems.dynamicPageItems_nineItem
          if (typeof Items[0] !== "undefined")
            if Items[0].TypeID == 3
              .dp_itemLarge.nineItem_1(data-listingid='#{Items[0].ID}')
                +item(Items[0], "large")
            else
              .dp_itemLarge.nineItem_1.listing(data-listingid='#{Items[0].ID}')
                +item(Items[0], "large")
          if (typeof Items[1] !== "undefined")
            .dp_itemSmall.nineItem_2.listing(data-listingid='#{Items[1].ID}')
              +item(Items[1], "small")
          if (typeof Items[2] !== "undefined")
